        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>

            <ListBox x:Name="listbox1" DockPanel.Dock="Top" Height="375" />
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="textbox" Width="500" ></TextBox>
                <Button Content="发送" Width="75" Click="Button_Click_1"/>
                <Button Content="连接服务器" Width="75" Click="Button_ClickAsync"/>
            </StackPanel>


        </DockPanel>


    </Grid>
</Window>
